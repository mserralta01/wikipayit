rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isValidContentType() {
      return request.resource.contentType.matches('image/.*|application/pdf');
    }

    function isValidFileSize() {
      return request.resource.size < 10 * 1024 * 1024; // 10MB
    }

    // Beneficial owners documents
    match /beneficial-owners/{leadId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() 
        && isValidContentType()
        && isValidFileSize();
    }

    // Voided checks and bank statements
    match /documents/{leadId}/{documentType}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() 
        && isValidContentType()
        && isValidFileSize();
    }

    // Default deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
